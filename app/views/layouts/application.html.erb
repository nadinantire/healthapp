<!DOCTYPE html>
<html>
  <head>
    <title>Healthcare</title>
    <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

  <body>
    <div id="layout">
        <!-- Menu toggle -->
        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>
        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="/">HealthCare</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item">
                      <%= link_to 'Doctors', doctors_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Doctor Appointments', doctor_appointments_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Doctor Notifications', doctor_notifications_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'In Patients', in_patients_path, class: 'pure-menu-link'  %>
                    </li>
                    <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
                </ul>
            </div>
        </div>
        <%= yield %>
        <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

    </div>
  </body>
</html>
